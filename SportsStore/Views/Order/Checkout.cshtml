@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we'll ship your goods right away!</p>

<form asp-action="Checkout" method="post">
	<h3>Ship to</h3>
	<div class="mb-3">
		<label>Name:</label>
		<input class="form-control" asp-for="Name"/>
	</div>
	<h3>Address</h3>
	<div class="mb-3">
		<label>Line 1:</label>
		<input class="form-control" asp-for="Line1" />
	</div>
	<div class="mb-3">
		<label>Line 2:</label>
		<input class="form-control" asp-for="Line2" />
	</div>
	<div class="mb-3">
		<label>Line 3:</label>
		<input class="form-control" asp-for="Line3" />
	</div>
	<div class="mb-3">
		<label>City:</label>
		<input class="form-control" asp-for="City" />
	</div>
	<div class="mb-3">
		<label>State:</label>
		<input class="form-control" asp-for="State" />
	</div>
	<div class="mb-3">
		<label>Zip:</label>
		<input class="form-control" asp-for="Zip" />
	</div>
	<div class="mb-3">
		<label>Country:</label>
		<input class="form-control" asp-for="Country" />
	</div>
	<h3>Options</h3>
	<div class="mb-3">
		<input type="checkbox" asp-for="GiftWrap" />
		<label>Gift wrap these items</label>
	</div>
	<div class="text-center">
		<input class="btn btn-primary" type="submit" value="Complete Order" />
	</div>
</form>