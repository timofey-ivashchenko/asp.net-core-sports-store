@using System.Globalization
@model ProductsListViewModel

<!-- Товары -->

@foreach (var product in Model.Products)
{
<div class="card m-1 p-1">
	<div class="p-1">
		<h4>
			@product.Name
			<span class="badge rounded-pill bg-primary text-white float-end">
				<small>@product.Price.ToString("C", new CultureInfo("en-US"))</small>
			</span>
		</h4>
	</div>
	<div class="card-text p-1">@product.Description</div>
</div>
}

<!-- # Товары -->

<!-- Навигация  -->

<div
	class="btn-group float-end m-1"
	page-action="Index"
	page-class="btn"
	page-class-normal="btn-outline-primary"
	page-class-selected="btn-primary"
	page-classes-enabled="true"
	page-model="@Model.PagingInfo">
</div>

<!-- # Навигация -->