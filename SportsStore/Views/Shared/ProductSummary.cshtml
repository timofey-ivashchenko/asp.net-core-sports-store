@using System.Globalization

@model Product

<div class="card m-1 p-1">
	<div class="p-1">
		<h4>
			@Model.Name
			<span class="badge rounded-pill bg-primary text-white float-end">
				<small>@Model.Price.ToString("C", new CultureInfo("en-US"))</small>
			</span>
		</h4>
	</div>
	<div class="card-text p-1">@Model.Description</div>
</div>