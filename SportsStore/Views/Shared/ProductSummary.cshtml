@model Product

<div class="card border-secondary m-1 p-1">

	<div class="bg-light p-1">
		<h4>
			@Model.Name
			<span class="badge rounded-pill bg-primary text-white float-end">
				<small>@Model.Price.ToString("C")</small>
			</span>
		</h4>
	</div>

	<form id="@Model.ProductID" asp-page="/cart" method="post">
		<input type="hidden" asp-for="ProductID" />
		<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
		<span class="card-text p-1">
			@Model.Description
			<button type="submit" class="btn btn-success btn-sm float-end">Add To Cart</button>
		</span>
	</form>

</div>