@using System.Globalization

@model Product

<div class="card m-1 p-1">

	<div class="p-1">
		<h4>
			@Model.Name
			<span class="badge rounded-pill bg-primary text-white float-end">
				<small>@Model.Price.ToString("C", new CultureInfo("en-US"))</small>
			</span>
		</h4>
	</div>
	
	<form id="@Model.Id" asp-page="/cart" method="post">
		<input type="hidden" asp-for="Id" />
		<input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
		<span class="card-text p-1">
			@Model.Description
			<button type="submit" class="btn btn-success btn-sm float-end" style="float:right">Add To Cart</button>
		</span>
	</form>
	
</div>